<%- include('partials/header') %>
<section id="home">
  <main class="center flex-column">
    <h1 class="display-3 text-white"><%= user.name %></h1>
    <h1 class="text-white text-small mt-4 text-education">
      - Perusing <%= user.education %> -
    </h1>
  </main>
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
    <path
      fill="#fff"
      fill-opacity="1"
      d="M0,288L30,282.7C60,277,120,267,180,250.7C240,235,300,213,360,208C420,203,480,213,540,229.3C600,245,660,267,720,256C780,245,840,203,900,181.3C960,160,1020,160,1080,160C1140,160,1200,160,1260,144C1320,128,1380,96,1410,80L1440,64L1440,320L1410,320C1380,320,1320,320,1260,320C1200,320,1140,320,1080,320C1020,320,960,320,900,320C840,320,780,320,720,320C660,320,600,320,540,320C480,320,420,320,360,320C300,320,240,320,180,320C120,320,60,320,30,320L0,320Z"
    ></path>
  </svg>
</section>

<section id="project">
  <h1 class="justify-center">Projects</h1>
  <div class="cards">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        <% user.projects.forEach(item=>{ %>

        <div class="swiper-slide">
          <div class="card">
            <div>
            <h1 class="justify-center"><%= item.projectName %></h1>
            <p class="font-weight-light justify-center">
              <%= new Date(item.startDate).toLocaleString("en-US",{ day:
              'numeric',year: 'numeric', month: 'short' }) %> to <%= new
              Date(item.endDate).toLocaleString("en-US",{ day: 'numeric',year:
              'numeric', month: 'short' }) %>
            </p>
          </div>
            <p class="mr-4 ml-4 mt-2 text-center "><%= item.projectDesc %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</section>
<section id="about">
  <h1 class="justify-center">About</h1>
  <div class="cards justify-center pr-4 pl-4">
    <p class="text-center mt-5"><%= user.about %></p>
  </div>
</section>
<section id="skill">
  <h1 class="justify-center">Skills</h1>
  <div class="cards">
    <% user.skills.forEach(item=>{ %>
    <div class="card flex-column center">
      <h1><%= item.toUpperCase() %></h1>
    </div>
    <% }) %>
  </div>
  <div class="footer center">
    <p class="text-muted">&copy; All Rights Reserved By Subhashree Satapathy</p>
  </div>
</section>

<%- include('partials/footer') %>
